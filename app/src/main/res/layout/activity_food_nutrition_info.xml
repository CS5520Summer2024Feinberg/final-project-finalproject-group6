<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".FoodNutritionInfoActivity">

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <ImageView
        android:id="@+id/ivFoodImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_food_placeholder" />

    <TextView
        android:id="@+id/tvFoodName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivFoodImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Food Name"
        android:textSize="24sp"
        android:textStyle="bold" />

    <SeekBar
        android:id="@+id/seekBarAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvFoodName"
        android:layout_marginTop="16dp"
        android:layout_toStartOf="@+id/tvSeekBarValue"
        android:layout_alignParentStart="true"
        android:max="500" />

    <TextView
        android:id="@+id/tvSeekBarValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvFoodName"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_alignParentEnd="true"
        android:text="0g"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnAddFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/seekBarAmount"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:text="Add Food" />

    <TextView
        android:id="@+id/tvPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnAddFood"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:text="* Drag the slider to select amount"
        android:textSize="14sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/tvNutritionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPrompt"
        android:layout_marginTop="16dp"
        android:text="Nutrition Info"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNutritionLabel"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <!-- Carbs -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carbs" />

        <TextView
            android:id="@+id/tvCarbsValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0g" />

        <ProgressBar
            android:id="@+id/progressBarCarbs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleHorizontal"
            android:progress="0"
            android:max="100" />

        <!-- Fats -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fats" />

        <TextView
            android:id="@+id/tvFatsValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0g" />

        <ProgressBar
            android:id="@+id/progressBarFats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleHorizontal"
            android:progress="0"
            android:max="100" />

        <!-- Proteins -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Proteins" />

        <TextView
            android:id="@+id/tvProteinsValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0g" />

        <ProgressBar
            android:id="@+id/progressBarProteins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleHorizontal"
            android:progress="0"
            android:max="100" />

        <!-- Fibers -->

        <!-- Calories -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calories" />

        <TextView
            android:id="@+id/tvCaloriesValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 kcal" />

        <ProgressBar
            android:id="@+id/progressBarCalories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleHorizontal"
            android:progress="0"
            android:max="100" />

    </LinearLayout>

</RelativeLayout>